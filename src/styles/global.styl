/* Light theme */
*
  margin 0
  padding 0

#app
  width 100%
  height 100vh

body
  font-family Arial
  font-size 12px
  background-color var(--app-bg)
  color var(--text)

.drag
  position absolute
  width 100%
  height 22px
  -webkit-app-region drag
  border-bottom 1px solid var(--border-default)
  transition all 0.3s ease

  &:hover
    border-bottom 1px solid var(--border-hover)

.drawing
  .sketch__panel,
  .sketch__panel *,
  .drag
    pointer-events none !important
